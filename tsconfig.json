{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "strictFunctionTypes": true,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
